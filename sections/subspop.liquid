{{ "custom-subscriber-popup.css" | asset_url | stylesheet_tag }}



<div id="customNewsletter">
  <div class="customNewsletter__container">
    <button id="customNewsletter__close">X</button>
    {% form 'customer'
			, class: 'custom__newsletter-form' %}
      <div class="customNewsletter__block customNewsletter__block-logo">
				<div class="customNewsletter__logo">

				</div>
			</div>
      <div class="customNewsletter__block  customNewsletter__block-text">
        <div class="customNewsletter__text">
          <h2 class="jah2 jah1-bold">{{ section.settings.heading }}</h2>
          {% if form.posted_successfully? %}
            <p class="jah3">{{ section.settings.success }}</p>
          {% else %}
            <p class="jah3">{{ section.settings.paragraph }}</p>
          {% endif %}
				</div>
          <input
            type="hidden"
            name="contact[tags]"
            value="newsletter">
          <div class="newsletter-form__field-wrapper">
            {% unless form.posted_successfully? %}
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input customNewsLetter__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required>
                <label class="field__label" for="NewsletterForm--{{ section.id }}">
                  {{ 'newsletter.label' | t }}
                </label>
              </div>
              <button
                type="submit"
                class="jabutton jabutton-grey wd100"
                name="commit"
                id="SubmitButton"
                aria-label="{{ 'newsletter.button_label' | t }}">
                SUBSCRIBE
              </button>
            {% else %}
						<div class="subssucs">
              <button
                type="button"
                class="jabutton jabutton-grey wd100"
                id="CloseButton">
                CLOSE
              </button>
						</div>
            {% endunless %}
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render 'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</small>
            {%- endif -%}
          </div>
        </div>
      </div>
    {% endform %}
  </div>
</div>
{% comment %} {{ 'custom-subscriber-popup.js' | asset_url | script_tag }} {% endcomment %}
{% schema %}
  {
    "name": "Pop Up",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "JAF",
        "placeholder": "Place Your Heading Here",
        "info": "Header for your popup"
      }, {
        "type": "textarea",
        "id": "paragraph",
        "label": "Paragraph",
        "default": "Sign up now and receive an exclusive 10% discount on your first purchase!",
        "placeholder": "Subscribe now to hear about great deals!",
        "info": "Paragraph area for pop up"
      }, {
        "type": "textarea",
        "id": "success",
        "label": "Success Message",
        "default": "Thank you!",
        "placeholder": "Thank you!",
        "info": "Paragraph area for success subscribe"
      }
    ],
    "presets": [
      {
        "name": "Pop Up"
      }
    ]
  }
{% endschema %}

